{
  "name": "@dafish/gogo-meta",
  "version": "1.0.0",
  "description": "A modern CLI for managing multi-repository projects. Simplifies onboarding and enables sharing common agentic coding configurations across teams.",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "gogo": "bin/gogo"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests && echo 'Lint passed'",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "cli",
    "meta",
    "monorepo",
    "multi-repo",
    "git",
    "repository",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daFish/gogo-meta.git"
  },
  "bugs": {
    "url": "https://github.com/daFish/gogo-meta/issues"
  },
  "homepage": "https://github.com/daFish/gogo-meta#readme",
  "dependencies": {
    "commander": "^14.0.0",
    "picocolors": "^1.1.1",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/node": "^25.0.0",
    "@vitest/coverage-v8": "^4.0.0",
    "eslint": "^9.39.2",
    "memfs": "^4.15.0",
    "semantic-release": "^25.0.2",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.52.0",
    "vitest": "^4.0.0"
  }
}
