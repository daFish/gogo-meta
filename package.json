{
  "name": "@gogo-meta/cli",
  "version": "0.1.0",
  "description": "A modern CLI tool for managing multi-repository projects",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "gogo": "./bin/gogo"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src tests && echo 'Lint passed'",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run build"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "publishConfig": {
    "@gogo-meta:registry": "https://gitlab.com/api/v4/projects/${PROJECT_ID}/packages/npm/"
  },
  "keywords": [
    "cli",
    "meta",
    "monorepo",
    "multi-repo",
    "git",
    "repository",
    "management"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "picocolors": "^1.1.1",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "eslint": "^9.39.2",
    "memfs": "^4.15.0",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.52.0",
    "vitest": "^2.1.8"
  }
}
